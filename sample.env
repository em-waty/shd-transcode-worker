# Redis connection (Managed Redis or self-hosted)
REDIS_URL=rediss://:PASSWORD@REDIS_HOST:PORT/0

# DigitalOcean Spaces credentials
DO_ACCESS_KEY=YOUR_DO_SPACES_ACCESS_KEY
DO_SECRET_KEY=YOUR_DO_SPACES_SECRET_KEY

# Spaces region and bucket
SPACES_REGION=ams3
SPACES_BUCKET=700days

# Output folder in Spaces (where processed files will go)
OUT_FOLDER=uploads-shd
PUBLIC_OUTPUTS=true

# CDN base for public URLs
CDN_BASE=https://700days.ams3.cdn.digitaloceanspaces.com

# Worker settings
CONCURRENCY=1
FETCH_TIMEOUT_MS=60000
MAX_FETCH_RETRIES=3
BACKOFF_BASE_MS=500

# Output format toggles
OUTPUT_MP4=true
OUTPUT_HLS=true
HLS_RENDITIONS=1080p,720p,480p
HLS_SEGMENT_SECONDS=4

# Thumbnails
THUMBS_ENABLE=true
THUMB_WIDTH=1280