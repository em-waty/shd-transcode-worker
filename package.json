{
  "name": "shd-transcode-worker",
  "version": "1.0.0",
  "description": "DigitalOcean Spaces video transcoding worker with MP4, HLS, and AVIF thumbnail generation",
  "type": "module",
  "main": "worker-hls-and-mp4.js",
  "scripts": {
    "start": "node worker-hls-and-mp4.js",
    "dev": "NODE_ENV=development node worker-hls-and-mp4.js",

    "start:api": "node enqueue-api.js",

    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs --update-env",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs --lines 50",

    "pm2:api:start": "pm2 start ./enqueue-api.js --name enqueue-api --cwd . --node-args=\"--enable-source-maps --env-file=.env\"",
    "pm2:api:reload": "pm2 reload enqueue-api --update-env",
    "pm2:worker:reload": "pm2 reload shd-transcode-worker --update-env",
    "pm2:save": "pm2 save"
  },
  "dependencies": {
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "node-fetch": "^3.3.2",
    "zod": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
